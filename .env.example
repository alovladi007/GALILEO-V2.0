# GALILEO V2.0 - Environment Configuration
# Copy this file to .env and fill in the values
# DO NOT commit .env to version control

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_USER=gravity
DATABASE_PASSWORD=CHANGE_ME_secure_random_password_here
DATABASE_NAME=gravity_ops
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_URL=postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_NAME}

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
CELERY_BROKER_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0
CELERY_RESULT_BACKEND=redis://${REDIS_HOST}:${REDIS_PORT}/0

# ============================================================================
# Security & Authentication
# ============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=CHANGE_ME_generate_64_char_random_secret_here
NEXTAUTH_SECRET=CHANGE_ME_generate_64_char_random_secret_here
NEXTAUTH_URL=http://localhost:3000

# Token expiration (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# API Configuration
# ============================================================================
# Main API (simulation, ML, processing)
GALILEO_API_HOST=0.0.0.0
GALILEO_API_PORT=5050

# Operations API (auth, jobs, workflows)
OPS_API_HOST=0.0.0.0
OPS_API_PORT=8000

# ============================================================================
# CORS Configuration
# ============================================================================
# Comma-separated list of allowed origins (NO SPACES)
# Production: https://yourdomain.com,https://app.yourdomain.com
# Development: http://localhost:3000,http://localhost:3001
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================================================
# MinIO Object Storage
# ============================================================================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=CHANGE_ME_minio_access_key
MINIO_SECRET_KEY=CHANGE_ME_minio_secret_key
MINIO_SECURE=false
MINIO_REGION=us-east-1

# ============================================================================
# Frontend Configuration
# ============================================================================
# API URL for frontend
NEXT_PUBLIC_API_URL=http://localhost:5050
NEXT_PUBLIC_OPS_API_URL=http://localhost:8000

# Cesium Ion Access Token (get from https://ion.cesium.com/tokens)
NEXT_PUBLIC_CESIUM_ION_TOKEN=CHANGE_ME_your_cesium_ion_token

# ============================================================================
# Monitoring & Observability
# ============================================================================
# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_secure_grafana_password

# Jaeger
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
JAEGER_UI_PORT=16686

# ============================================================================
# Application Settings
# ============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=false

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# ============================================================================
# ML/AI Configuration
# ============================================================================
ML_MODEL_PATH=/app/checkpoints
ML_DEVICE=cpu
ML_BATCH_SIZE=32

# ============================================================================
# Geophysics Data Paths
# ============================================================================
EGM2008_DATA_PATH=/app/data/geophysics/egm2008
CRUST10_DATA_PATH=/app/data/geophysics/crust1.0
GLDAS_DATA_PATH=/app/data/geophysics/gldas

# ============================================================================
# Compliance & Security
# ============================================================================
RBAC_ENABLED=true
AUDIT_LOGGING_ENABLED=true
SECRETS_ENCRYPTION_ENABLED=true
DATA_RETENTION_DAYS=2555

# ============================================================================
# Session Configuration
# ============================================================================
SESSION_COOKIE_NAME=galileo_session
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax

# ============================================================================
# Docker-specific overrides (for docker-compose)
# ============================================================================
# Uncomment these when running in Docker
# DATABASE_HOST=postgres
# REDIS_HOST=redis
# MINIO_ENDPOINT=minio:9000
